# Maintainer: Ruben De Smet <me at rubdos dot be>
# Contributor: btschaegg

pkgname=weston-wall-git
_gitname=weston-wall
pkgver=r55.2f8ca83
pkgrel=1
pkgdesc="A collection of protocols, called bricks, to create a complete desktop experience for Weston."
arch=('i686' 'x86_64')
url="https://github.com/wayland-wall/weston-wall"
license=('MIT')
depends=('wayland-wall-git')
makedepends=('git' 'make')
optdepends=('wlc-wall-injector: inject wall into wlc based compositors')
provides=('weston-wall' 'weston-wall-git')
conflicts=('weston-wall')
source=("git+https://github.com/wayland-wall/weston-wall.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir"/"$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$_gitname"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir"/"$_gitname"
  make DESTDIR="$pkgdir/" install

 # install -Dm644 COPYING "$pkgdir/usr/share/licenses/wayland-wall-git/COPYING"
}
